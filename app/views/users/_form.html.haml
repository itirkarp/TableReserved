= form_for @user do |f|
  %span.flash-error
    = f.error_messages.first[:first_name].first ? f.error_messages.first[:first_name].first : f.error_messages.first[:last_name].first
  #first-name
    = f.label :first_name, "First name"
    %br
    = f.text_field :first_name, :class => 'name-field'
  #last-name
    = f.label :last_name, "Last name"
    %br
    = f.text_field :last_name, :class => 'name-field'
    %br
  #fields
    = f.label :email, "Email Address"
    %span.flash-error
      = f.error_messages.first[:email].first
    %br
    = f.text_field :email, :class => 'field'
  %p
    = f.label :password, "Password"
    %span.flash-error
      = f.error_messages.first[:password].first
    %br
    = f.password_field :password, :class => 'field'
  %p
    = f.label :password_confirmation, "Confirm Password"
    %br
    = f.password_field :password_confirmation, :class => 'field'
  %p
    = f.label :zip_code, "Zip Code"
    %span.flash-error
      = f.error_messages.first[:zip_code].first
    %br
    = f.text_field :zip_code, :class => 'field'
  %p
    = check_box_tag :terms, '1', true
    I agree to the
    = link_to "Terms of Service", "#"
    and
    = link_to "Privacy Policy", "#"
    %span.flash-error
      = "(#{f.error_messages.first[:terms].first})" if f.error_messages.first[:terms].first

  #button
    = submit_tag "Become a Member", :class => 'primary-button'
