- javascript("sessions/new")

= content_for :title, "Log in"

#content
  #logo-container
    = image_tag "reserved_black.jpg", :class => 'logo'
  #slogan
    Exclusive Discounts at the Finest Restaurants
  #login.less-dull
    %h2 Member Sign in

    You must sign in or become a member to view our exclusive offers.
    %p
      - if flash[:alert]
        .flash-error
          = flash[:alert]

    = form_tag sessions_path do
      %p
        = label_tag :login, "Email Address"
        %br
        = text_field_tag :login, params[:login], :class => 'field'
      %br
      %p
        = label_tag :password
        %br
        = password_field_tag :password, nil, :class => 'field'
      %p
        = check_box_tag :remember
        = label_tag :remember, "Remember Me"
      %p
        = link_to "Forgot your password?", "#"
      %p.button
        = submit_tag "Sign in", :class => 'primary-button'
  #separator
  #signup.less-dull
    %h2 Become a Member for Free
    = render 'users/form'
  = render 'shared/footer'
  #copyright
    &copy; 2011 Table Reserved, Inc. All Rights Reserved